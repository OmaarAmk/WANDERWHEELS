<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Showerhead -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="10dp">
        <shape android:shape="oval">
            <solid android:color="#888888"/>
            <size android:width="50dp" android:height="20dp"/>
        </shape>
    </item>

    <!-- Shower pipe -->
    <item android:left="20dp" android:right="20dp" android:top="30dp" android:bottom="30dp">
        <shape android:shape="rectangle">
            <solid android:color="#555555"/>
            <size android:width="5dp" android:height="30dp"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <!-- Water drops -->
    <item android:left="15dp" android:right="0dp" android:top="50dp" android:bottom="50dp">
        <shape android:shape="oval">
            <solid android:color="#00BFFF"/>
            <size android:width="5dp" android:height="5dp"/>
        </shape>
    </item>
    <item android:left="25dp" android:right="0dp" android:top="60dp" android:bottom="60dp">
        <shape android:shape="oval">
            <solid android:color="#00BFFF"/>
            <size android:width="5dp" android:height="5dp"/>
        </shape>
    </item>
    <item android:left="35dp" android:right="0dp" android:top="70dp" android:bottom="70dp">
        <shape android:shape="oval">
            <solid android:color="#00BFFF"/>
            <size android:width="5dp" android:height="5dp"/>
        </shape>
    </item>
</layer-list>
