<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/authRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA">
    <!--
    android:background="@drawable/bg_gradient"
    -->

    <!-- Centered Auth Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center_horizontal">

        <!-- AUTH CARD CONTAINER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_bg"
            android:padding="24dp"
            android:orientation="vertical"
            android:elevation="8dp"
            android:layout_margin="16dp">

            <!-- LOGIN FORM -->
            <LinearLayout
                android:id="@+id/loginLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <TextView
                    android:text="Bienvenue ðŸ‘‹"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/loginEmail"
                    android:hint="Adresse e-mail"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/edit_text_bg"
                    android:padding="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/loginPassword"
                    android:hint="Mot de passe"
                    android:inputType="textPassword"
                    android:background="@drawable/edit_text_bg"
                    android:padding="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/forgotPasswordTextView"
                    android:text="Mot de passe oubliÃ© ?"
                    android:textColor="#2196F3"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/loginButton"
                    android:text="Connexion"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="@color/blue_500"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/switchToSignUpButton"
                    android:text="CrÃ©er un compte"
                    android:textColor="@color/blue_500"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- SIGN UP FORM -->
            <LinearLayout
                android:id="@+id/signUpLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="8dp">

                <TextView
                    android:text="CrÃ©er un compte âœ¨"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/signUpFirstName"
                    android:hint="PrÃ©nom"
                    android:background="@drawable/edit_text_bg"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/signUpLastName"
                    android:hint="Nom"
                    android:background="@drawable/edit_text_bg"
                    android:padding="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/signUpEmail"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/edit_text_bg"
                    android:padding="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/signUpPassword"
                    android:hint="Mot de passe"
                    android:inputType="textPassword"
                    android:background="@drawable/edit_text_bg"
                    android:padding="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/signUpBirthDate"
                    android:hint="Date de naissance (ex : 01/01/2000)"
                    android:inputType="text"
                    android:background="@drawable/edit_text_bg"
                    android:padding="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/signUpButton"
                    android:text="CrÃ©er mon compte"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="@color/blue_500"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/switchToLoginButton"
                    android:text="DÃ©jÃ  inscrit ? Connexion"
                    android:textColor="@color/blue_500"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
